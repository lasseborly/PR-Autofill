{
  "short_name": "PR-Autofill",
  "name": "PR-Autofill",
  "manifest_version": 2,
  "description": "Autofills a template in your pull requests.",
  "version": "1.0",
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "browser_action": {
    "default_icon": "logo128.png",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://bitbucket.org/*"],
      "js": ["injectPRTemplate.js"]
    }
  ]
}
